# This is the graphics page for the new users part of the application
# allows new users to create an account.
# goes alongside the newuser.py file

<NewPage>:
    canvas:
        Color:
            rgb: 172/255.0, 218/255.0, 229/255.0 ,1
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        size_hint: 0.3,0.3
        font_size: 50
        bold: True
        text: "New User"
        pos_hint: {"x": 0.15, "y": .79}
        color: 0,0,0,1
        text: "Create an account"
    Image:
        source: 'WeatherIcon.png'
        size_hint: 0.1,0.1
        pos_hint: {"x": 0.08, "y": .89}
    Button:
        font_size: 40
        background_color: 255/255.0, 247/255.0, 0/255.0 ,1.0
        size_hint: 0.05,0.05
        pos_hint: {"x": 0.02, "y": .93}
        text: "Back"
        on_press: root.manager.current = 'menu'

    GridLayout:
        cols:1
        size: root.width-400, root.height-400
        GridLayout:
            cols: 2
            Label:
                color: 0,0,0,1
                text: "Name: "

            TextInput:
                multinline:False

            Label:
                color: 0,0,0,1
                text: "Email: "
            TextInput:
                multiline: False
            Label:
                color: 0,0,0,1
                text: "Password: "
            TextInput:
                multiline: False
        Button:
            font_size: 40
            background_color: 255/255.0, 247/255.0, 0/255.0 ,1.0
            size_hint: 0.1,0.1
            text: "Submit"
            on_press: root.manager.current = 'weather'
