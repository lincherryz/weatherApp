# This is the graphics page for the notification part of the application
# presents users with tips and suggestions based on the current weather
# goes alongside the notifications.py file

#:import App kivy.app.App

<WeatherPage>:
    canvas:
        Color:
            rgb: 172/255.0, 218/255.0, 229/255.0 ,1
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        size_hint: 0.3,0.3
        font_size: 70
        bold: True
        pos_hint: {'center_x': 0.5, 'center_y': 0.9}
        color: 0,0,0,1
        text: "Weather Notification"
    Image:
        source: '../kv/WeatherIcon.png'
        size_hint: 0.1,0.1
        pos_hint: {"center_x": 0.25, "center_y": 0.9}
    Button:
        font_size: 40
        background_normal: ''
        background_color: 199/255.0, 166/255.0, 0/255.0 ,1.0
        size_hint: 0.1,0.07
        pos_hint: {"x": 0.01, "y": .92}
        text: "Back"
        on_press: root.manager.current = 'menu'

    TextInput:
        size_hint: 0.8,0.75
        pos_hint: {"center_x": 0.5, "center_y": 0.45}
        multiline: False
    GridLayout:
        cols:2
        size_hint: 0.8,0.05
        pos_hint: {"center_x": 0.5, "center_y": 0.1}
        Button:
            font_size: 40
            background_color: 255/255.0, 247/255.0, 0/255.0 ,1.0
            text: "Refresh"
        Button:
            font_size: 40
            background_color: 255/255.0, 247/255.0, 0/255.0 ,1.0
            text: "Exit"
            on_press: app.stop()

